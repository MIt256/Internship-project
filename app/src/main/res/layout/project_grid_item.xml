<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fragment_elements_small_margin"
    app:cardCornerRadius="@dimen/fragment_main_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/project_color_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="@dimen/fragment_elements_main_margin"
            android:src="@drawable/ic_project_color"
            />

        <TextView
            android:id="@+id/project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/app_grey"
            android:fontFamily="@font/roboto_light_italic"
            android:textSize="@dimen/fragment_main_text_size"
            android:layout_marginLeft="@dimen/fragment_elements_main_margin"
            android:layout_marginBottom="@dimen/fragment_elements_secondary_margin"
            android:layout_marginTop="@dimen/fragment_elements_small_margin"
            android:layout_marginRight="@dimen/fragment_elements_main_margin"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>