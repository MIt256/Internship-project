<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.task.TaskFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_light_italic"
            android:text="@string/toolbar_profile_text"
            android:textSize="18sp" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_add_task3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fragment_elements_main_margin"
                android:layout_marginEnd="@dimen/fragment_elements_main_margin"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/app_red"
                android:fontFamily="@font/roboto_light_italic"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Generate statistic"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/fragment_main_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_card_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_elements_secondary_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/fragment_secondary_padding">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="@dimen/fragment_profile_icon_size"
                        android:layout_height="@dimen/fragment_profile_icon_size"
                        android:src="@drawable/ic_no_image"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/fragment_elements_secondary_margin"
                        android:fontFamily="@font/roboto_light_italic"
                        android:text="@string/no_info_text"
                        android:textSize="@dimen/fragment_main_text_size"
                        app:layout_constraintStart_toEndOf="@+id/profile_image"
                        app:layout_constraintTop_toTopOf="@+id/profile_image" />

                    <TextView
                        android:id="@+id/user_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/fragment_elements_secondary_margin"
                        android:layout_marginTop="@dimen/fragment_elements_small_margin"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/no_info_text"
                        android:textSize="@dimen/fragment_small_text_size"
                        app:layout_constraintStart_toEndOf="@+id/profile_image"
                        app:layout_constraintTop_toBottomOf="@+id/user_name" />

                    <TextView
                        android:id="@+id/created_task_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/fragment_elements_secondary_margin"
                        android:fontFamily="@font/roboto_light_italic"
                        android:text="5"
                        android:textSize="@dimen/fragment_main_text_size"
                        app:layout_constraintStart_toStartOf="@+id/profile_image"
                        app:layout_constraintTop_toBottomOf="@+id/profile_image" />

                    <TextView
                        android:id="@+id/created_task_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/fragment_elements_small_margin"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/created_tasks_text"
                        android:textSize="@dimen/fragment_small_text_size"
                        app:layout_constraintStart_toStartOf="@+id/created_task_count"
                        app:layout_constraintTop_toBottomOf="@+id/created_task_count" />

                    <TextView
                        android:id="@+id/completed_task_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/fragment_elements_small_margin"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/completed_tasks_text"
                        android:textSize="@dimen/fragment_small_text_size"
                        app:layout_constraintStart_toStartOf="@+id/completed_task_count"
                        app:layout_constraintTop_toBottomOf="@+id/completed_task_count" />

                    <TextView
                        android:id="@+id/completed_task_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light_italic"
                        android:text="2"
                        android:textSize="@dimen/fragment_main_text_size"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/created_task_text"
                        app:layout_constraintTop_toTopOf="@+id/created_task_count" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_settings"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/work_recycler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_elements_secondary_margin"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_card_view" />

            <androidx.cardview.widget.CardView
                android:id="@+id/statistic_card_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_elements_secondary_margin"
                app:layout_constraintBottom_toTopOf="@+id/button_add_task3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/work_recycler">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/fragment_secondary_padding">

                    <TextView
                        android:id="@+id/statistic_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light_italic"
                        android:text="@string/statistic_text"
                        android:textSize="@dimen/fragment_main_text_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/statistic_events_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/fragment_elements_secondary_margin"
                        android:background="@drawable/ic_circle_statistic"
                        android:backgroundTint="@color/app_red"
                        android:fontFamily="@font/roboto_light_italic"
                        android:gravity="center"
                        android:text="33%"
                        android:textSize="@dimen/fragment_main_text_size"
                        app:layout_constraintEnd_toStartOf="@+id/statistic_todo_count"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/statistic_text" />

                    <TextView
                        android:id="@+id/statistic_todo_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_circle_statistic"
                        android:backgroundTint="@color/blue_button"
                        android:fontFamily="@font/roboto_light_italic"
                        android:gravity="center"
                        android:text="67%"
                        android:textSize="@dimen/fragment_main_text_size"
                        app:layout_constraintEnd_toStartOf="@+id/statistic_quick_count"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/statistic_events_count"
                        app:layout_constraintTop_toTopOf="@+id/statistic_events_count" />

                    <TextView
                        android:id="@+id/statistic_quick_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_circle_statistic"
                        android:backgroundTint="@color/app_purple"
                        android:fontFamily="@font/roboto_light_italic"
                        android:gravity="center"
                        android:text="33%"
                        android:textSize="@dimen/fragment_main_text_size"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/statistic_todo_count"
                        app:layout_constraintTop_toTopOf="@+id/statistic_events_count" />

                    <TextView
                        android:id="@+id/statistic_events_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/fragment_elements_small_margin"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Active tasks"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/fragment_small_text_size"
                        app:layout_constraintEnd_toEndOf="@+id/statistic_events_count"
                        app:layout_constraintStart_toStartOf="@+id/statistic_events_count"
                        app:layout_constraintTop_toBottomOf="@+id/statistic_events_count" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/fragment_elements_small_margin"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Work periods"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/fragment_small_text_size"
                        app:layout_constraintEnd_toEndOf="@+id/statistic_todo_count"
                        app:layout_constraintStart_toStartOf="@+id/statistic_todo_count"
                        app:layout_constraintTop_toBottomOf="@+id/statistic_todo_count" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/fragment_elements_small_margin"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Rest periods"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/fragment_small_text_size"
                        app:layout_constraintEnd_toEndOf="@+id/statistic_quick_count"
                        app:layout_constraintStart_toStartOf="@+id/statistic_quick_count"
                        app:layout_constraintTop_toBottomOf="@+id/statistic_quick_count" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/log_out"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:src="@drawable/out"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>